<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textFieldStyle" parent="android:Widget.EditText">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/form_text_gray</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/btn_color_1</item>
        <item name="colorAccent">@color/btn_color_2</item>
    </style>

    <style name="CustomTimePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/btn_color_1</item>
        <item name="colorAccent">@color/btn_color_2</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>

        <item name="colorPrimary">@color/btn_color_1</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/btn_color_1</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@color/btn_color_1</item>

        <item name="buttonBarPositiveButtonStyle">@style/DatePickerButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DatePickerButton</item>
    </style>

    <style name="DatePickerButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/btn_color_1</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/btn_color_1</item>
    </style>
</resources>
