<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a ride"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"/>

            <!-- Location Display Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/locationDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f5f5f5"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toStartOf="@id/dropdownArrow">

                        <TextView
                            android:id="@+id/locationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kopernikova 23 â†’ Å½elezniÄka stanica"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:id="@+id/timeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âŒ› Leave now"
                            android:textColor="#666"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dropdownArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="#666"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dropdown Content -->
            <androidx.cardview.widget.CardView
                android:id="@+id/dropdownContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f5f5f5"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From:"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/fromLocationInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter pickup location"
                        android:padding="10dp"
                        android:background="@drawable/input_background"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To:"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/toLocationInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter destination"
                        android:padding="10dp"
                        android:background="@drawable/input_background"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/addStopBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ Add stop"
                        android:textColor="#666"
                        android:backgroundTint="@color/white"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/stopsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When:"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>
                    <RadioGroup
                        android:id="@+id/whenGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/radioNow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Leave now"
                            android:buttonTint="@drawable/radio_background"
                            android:padding="10dp"
                            android:layout_marginBottom="8dp"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/radioSchedule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Schedule for later"
                            android:buttonTint="@drawable/radio_background"
                            android:padding="10dp"
                            android:layout_marginBottom="8dp"/>
                    </RadioGroup>
                    <LinearLayout
                        android:id="@+id/dateTimePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <EditText
                            android:id="@+id/dateInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Date"
                            android:inputType="date"
                            android:padding="10dp"
                            android:background="@drawable/input_background"
                            android:layout_marginEnd="5dp"/>

                        <EditText
                            android:id="@+id/timeInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Time"
                            android:inputType="time"
                            android:padding="10dp"
                            android:background="@drawable/input_background"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/confirmBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirm"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:backgroundTint="@color/car_selected"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Car Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/standardCar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/car_selected"
                    app:cardCornerRadius="15dp"
                    android:layout_marginEnd="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/standard"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Standard"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/luxuryCar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/car_default"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/luxury"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luxury"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/vanCar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/car_default"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/van"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Van"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Share Ride Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/shareRideCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f5f5f5"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/shareRideText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ Share a ride"
                        android:textColor="#666"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/shareRideArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="#666"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Share Ride Content -->
            <androidx.cardview.widget.CardView
                android:id="@+id/shareRideContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f5f5f5"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add passengers by email:"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/passengersContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <Button
                        android:id="@+id/addPassengerBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ Add passenger"
                        android:textColor="#666"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/confirmShareBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirm"
                        android:textColor="#333"
                        android:textStyle="bold"
                        android:backgroundTint="@color/car_selected" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Checkboxes -->
            <CheckBox
                android:id="@+id/babyCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you travelling with a baby?"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:buttonTint="@color/car_selected"/>

            <CheckBox
                android:id="@+id/petCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you travelling with a pet?"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:buttonTint="@color/car_selected" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/totalPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price: 500 RSD"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <!-- Order Button -->
            <Button
                android:id="@+id/orderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/btn_color_2"
                android:padding="12dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>