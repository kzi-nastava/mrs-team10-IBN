<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/john"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lastname"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/lastnameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doe"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/john_doe_example_com"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1234567890"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/active"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <View
            android:id="@+id/startDot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_circle_red"
            app:layout_constraintTop_toTopOf="@id/startInput"
            app:layout_constraintBottom_toBottomOf="@id/startInput"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/startInput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:background="@color/white"
            android:hint="@string/start_location"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/startDot"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/endDot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_circle_green"
            app:layout_constraintTop_toTopOf="@id/endInput"
            app:layout_constraintBottom_toBottomOf="@id/endInput"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/endInput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="@string/destination"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/endDot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startInput"/>

        <LinearLayout
            android:id="@+id/avatars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/endInput"
            app:layout_constraintStart_toStartOf="parent">


        </LinearLayout>

        <TextView
            android:id="@+id/startTime"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/avatars"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/endTime"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/startTime"
            app:layout_constraintTop_toTopOf="@id/startTime"/>

        <TextView
            android:id="@+id/startDate"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/endTime"
            app:layout_constraintTop_toTopOf="@id/startTime"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>