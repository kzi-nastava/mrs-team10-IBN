<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/passengerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger:"
        android:textColor="#666"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/passengerEmailInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter passenger email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:background="@drawable/input_background"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginEnd="5dp"/>

        <ImageButton
            android:id="@+id/removePassengerBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_delete"
            android:background="@drawable/remove_button_background"
            android:scaleType="centerInside"
            android:contentDescription="Remove passenger"
            android:tint="#ffffff"/>
    </LinearLayout>
</LinearLayout>