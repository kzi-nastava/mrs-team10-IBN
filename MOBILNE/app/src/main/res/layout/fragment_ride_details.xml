<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="32dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#D3CFCF"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="180dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/startTimeDetail">
    </org.osmdroid.views.MapView>


        <!-- START TIME -->
        <TextView
            android:id="@+id/startTimeDetail"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/map"
            app:layout_constraintTop_toTopOf="@id/map"/>

        <!-- END TIME -->
        <TextView
            android:id="@+id/endTimeDetail"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/startTimeDetail"
            app:layout_constraintTop_toTopOf="@id/startTimeDetail"/>

        <!-- CANCELED -->
        <CheckBox
            android:id="@+id/canceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/canceled"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/startTimeDetail"
            app:layout_constraintStart_toStartOf="@id/startTimeDetail"/>

        <!-- PANIC -->

        <!-- PUTNICI -->
        <CheckBox
            android:id="@+id/panic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/panic"
            app:layout_constraintStart_toStartOf="@id/startTimeDetail"
            app:layout_constraintTop_toBottomOf="@id/canceled" />

        <GridLayout
            android:id="@+id/passengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/map"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- FAVORITES -->
        <Button
            android:id="@+id/favorites"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/favorites"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passengers"/>

        <!-- PRICE -->
        <TextView
            android:id="@+id/priceDetail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="#6FAF6F"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/favorites"
            app:layout_constraintStart_toEndOf="@id/favorites"
            app:layout_constraintEnd_toStartOf="@id/order"
            android:layout_marginHorizontal="8dp"/>

        <!-- ORDER -->
        <Button
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/order"
            app:layout_constraintTop_toTopOf="@id/favorites"
            app:layout_constraintEnd_toEndOf="parent"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
