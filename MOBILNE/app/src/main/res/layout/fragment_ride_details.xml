<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="32dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#D3CFCF"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <!-- MAPA -->
        <ImageView
            android:id="@+id/route"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- START TIME -->
        <TextView
            android:id="@+id/startTimeDetail"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/route"
            app:layout_constraintTop_toTopOf="@id/route"/>

        <!-- END TIME -->
        <TextView
            android:id="@+id/endTimeDetail"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/startTimeDetail"
            app:layout_constraintTop_toTopOf="@id/startTimeDetail"/>

        <!-- CANCELED -->
        <CheckBox
            android:id="@+id/canceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/canceled"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/startTimeDetail"
            app:layout_constraintStart_toStartOf="@id/startTimeDetail"/>

        <!-- PANIC -->

        <!-- PUTNICI -->
        <CheckBox
            android:id="@+id/panic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/panic"
            app:layout_constraintStart_toStartOf="@id/startTimeDetail"
            app:layout_constraintTop_toBottomOf="@id/canceled" />

        <LinearLayout
            android:id="@+id/passengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/route"
            app:layout_constraintStart_toStartOf="parent">

            <!-- PUTNIK -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#3E3E3E"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/white"/>

                <TextView
                    android:text="Ivana IgnjatiÄ‡"
                    android:textColor="@android:color/white"
                    android:layout_height="30dp"
                    android:layout_width="100dp"/>

                <TextView
                    android:text="066 066 00 00"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_height="30dp"
                    android:layout_width="100dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- FAVORITES -->
        <Button
            android:id="@+id/favorites"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/favorites"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passengers"/>

        <!-- PRICE -->
        <TextView
            android:id="@+id/priceDetail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="#6FAF6F"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/favorites"
            app:layout_constraintStart_toEndOf="@id/favorites"
            android:layout_marginHorizontal="8dp"/>

        <!-- ORDER -->
        <Button
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/order"
            app:layout_constraintTop_toTopOf="@id/favorites"
            app:layout_constraintEnd_toEndOf="parent"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
